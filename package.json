{
  "name": "hanviet-pinyin-words",
  "version": "2.1.2",
  "description": "Convert Chinese words to Sino-Vietnamese words according to pinyin. Chuyển đổi từ vựng Hán Việt theo pinyin",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "test": "mocha tests/**/*.test.js",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "chinese",
    "vietnamese",
    "han viet",
    "hanviet",
    "trung viet",
    "dictionary",
    "vocabulary",
    "word list",
    "pinyin",
    "transliteration"
  ],
  "author": "Phong Phan",
  "license": "MIT",
  "homepage": "https://github.com/ph0ngp/hanviet-pinyin-words",
  "bugs": {
    "url": "https://github.com/ph0ngp/hanviet-pinyin-words/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ph0ngp/hanviet-pinyin-words.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "chai": "^5.1.1",
    "eslint": "^9.12.0",
    "globals": "^15.10.0",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3"
  }
}
